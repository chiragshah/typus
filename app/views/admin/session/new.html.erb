<%
  page_title = Typus::I18n.t("Sign in")
  admin_title(page_title)
%>
<h2>Sign in</h2>
<%= form_for :typus_user, :url => { :action => :create, :back_to => params[:back_to] }, :html => {:class => 'well'} do |form| %>

      <div><%= form.label :email, Typus.user_class.human_attribute_name(:email) %>
      <%= form.text_field :email, :size => 20, :class => "text", :autofocus => "autofocus" %></div>

      <div><%= form.label :password, Typus.user_class.human_attribute_name(:password) %>
      <%= form.password_field :password, :size => 20, :class => "text" %></div>

      <div><%= submit_tag Typus::I18n.t("Sign in"), :class => "btn", :disable_with => Typus::I18n.t("Sending data ...") %></div>

<% end %>

<% if Typus.mailer_sender %>
  <% content_for :actions do %>
    <ul>
      <li><%= link_to Typus::I18n.t("Recover password"), forgot_password_admin_account_index_path %></li>
    </ul>
  <% end %>
<% end %>
