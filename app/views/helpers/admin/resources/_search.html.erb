<div id="search" style="float:right;">

  <%= form_tag nil, :method => :get, :class => 'form-search' do %>

    <%= search_field_tag "search", nil, :id => "quicksearch", :title => (params[:search] || Typus::I18n.t("Search")), :class => 'input-medium search-query watermark' %>

    <% hidden_filters.each do |key, value| %>
      <%= hidden_field_tag key, value %>
    <% end %>

  <% end %>

</div>
